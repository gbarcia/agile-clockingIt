<table class="content" id="finance_table" width="100%" style="margin-left:0;margin-right:0;">
  <tr>
    <th title="Iteraciones del proyecto"><%=_ 'Iterations' %></th>
    <th title="Costos Planeados"><%=_ 'Estimate Cost' %></th>
    <th title="Costos Reales"><%=_ "Real Cost" %></th>
    <th title="Balance"><%=_ 'Balance' %></th>
    <th title="Beneficio Neto"><%=_ "Benefist" %></th>
    <th title="Costo/Benificio"><%=_ 'B/CR' %></th>
    <th title="Valor Actual Neto"><%=_ 'NPV' %></th>
    <th title="Valor Ganado"><%=_ 'EV' %></th>
    <th title="Indice de desempe&ntilde;o en Costos"><%=_ 'CPI' %></th>
    <th title="Indice de desempe&ntilde;o en Agenda"><%=_ 'SPI' %></th>
    <th title="Tasa Interna de Retorno"><%=_ 'ROI' %></th>
  </tr>

  <% count = 1  %>
  <% @project.milestones.each do |iteration| %>
    <% if count % 2 == 0 %>
      <tr id="s" class="row_stripe" style="text-align: right"/>
      <% else %>
      <tr id="s2" style="text-align: right">
      <% end %>
      <td style="text-align: center">
        <%= 'Iteracion ' + count.to_s %>
      </td>
      <td>
        <%= iteration.get_estimate_cost %>
      </td>
      <td>
        <%= iteration.get_real_cost %>
      </td>
      <td>
        <%= iteration.get_balance_presentation + " %" %>
      </td>
      <td>
        <%= iteration.get_benefist %>
      </td>
      <td>
        <%= iteration.get_ratio_cost_benefist.to_s + ":1" %>
      </td>
      <td>
        <%= iteration.get_npv%>
      </td>
      <td>
        <%= iteration.get_earned_value %>
      </td>
      <td>
        <%= iteration.get_cpi %>
      </td>
      <td>
        <%= iteration.get_spi %>
      </td>
      <td>
        <%= iteration.get_roi.to_s + " %" %>
      </td>
    </tr>
    <%count = count + 1%>
  <% end %>
  <tr style="text-align: right" class="row_total">
    <td style="text-align: center">
      <%= 'Total' %>
    </td>
    <td>
      <%= @project.get_estimate_cost %>
    </td>
    <td>
      <%= @project.get_real_cost %>
    </td>
    <td>
      <%= @project.get_balance_presentation + ' %' %>
    </td>
    <td>
      <%= @project.get_benefist %>
    </td>
    <td>
      <%= @project.get_cost_benefis_ratio.to_s + ':1' %>
    </td>
    <td>
      <%= @project.get_npv %>
    </td>
    <td>
      <%= @project.get_earned_value %>
    </td>
    <td>
      <%= @project.get_cpi %>
    </td>
    <td>
      <%= @project.get_spi %>
    </td>
    <td>
      <%= @project.get_roi.to_s + ' %' %>
    </td>
  </tr>
</table>